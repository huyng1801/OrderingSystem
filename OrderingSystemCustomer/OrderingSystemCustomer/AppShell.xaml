<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OrderingSystemCustomer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:OrderingSystemCustomer.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="OrderingSystemCustomer"
    Shell.TabBarIsVisible="False"
    >
    <TabBar>
        <Tab>
            <ShellContent
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="MainPage" />
            <ShellContent
                 ContentTemplate="{DataTemplate views:TablePage}"
                 Route="TablePage" />
            <ShellContent
                ContentTemplate="{DataTemplate views:OrderPage}"
                Route="OrderPage" />
        </Tab>
    </TabBar>
</Shell>
